let init ['a|rho|] (l : int) (v : 'a) =
  {0 <= l}
  if l = 0 then ar_empty
  else
    let res = ref{{rho}} (create l v : 'a array) in
      (for i = 0 to l - 1 do
        { len (!!res) = l /\ 
          forall (k : int). 0 <= k /\ k < i -> get k (!!res) = v}
        res := set i v (!res)
      done) ; 
      res
  { r : len (!!r) = l /\ forall (k : int). 0 <= k /\ k < l -> get k (!!r) = v }
