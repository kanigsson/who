let iter ['a|t|'e]
  (inv : <t 'e> -> int ->  prop)
  (ar : ref(t, 'a array)) (f : 'a ->{t 'e} unit)  =
  { inv cur 0 /\
    forall (i:int). 0 <= i /\ i < len (!!ar) ->
    [[ inv cur i]] f (get i !ar) [[inv cur (i+1)]]
    }
  for i = 0 to len !ar - 1 do
    { inv cur i }
    f (get i !ar)
  done
  {inv cur (len !!ar|old) }
