let pre ['a 'b||]= (λ(x:('a * 'b)) -> fst ['a,'b||] x) in
let post ['a 'b||]= (λ(x:('a * 'b)) -> snd ['a,'b||] x) in
let
forto [||e]=
            (λ(inv:nat -> map{|e } -> prop) ->
            (λ(start:nat) ->
            (λ(end_:nat) ->
            (λ(f:nat ->{|e } unit) ->
            {(λ(cur:map{|e }) ->
             (inv start cur) /\
             (forall (i:nat).
              ((start <= i) /\ (i <= end_)) ->
              (forall (m:map{|e }).
               (inv i m) ->
               ((pre [nat -> map{|e } -> prop,nat -> map{|e } -> map{|e } ->
                 unit -> prop||] f i m)
                /\
                (forall (n:map{|e }).
                 (post [nat -> map{|e } -> prop,nat -> map{|e } -> map{|e
                  } -> unit -> prop||] f i m n ())
                 -> (inv (i + 1) n))))))}
            param(unit,{|e })
            {(λ(old:map{|e }) ->
             (λ(cur:map{|e }) ->
             (λ(:unit) -> inv (max start (end_ + 1)) cur)))}))))
in
let
fordownto [||e]=
                (λ(inv:nat -> map{|e } -> prop) ->
                (λ(start:nat) ->
                (λ(end_:nat) ->
                (λ(f:nat ->{|e } unit) ->
                {(λ(cur:map{|e }) ->
                 (inv start cur) /\
                 (forall (i:nat).
                  ((start <= i) /\ (i <= end_)) ->
                  (forall (m:map{|e }).
                   (inv i m) ->
                   ((pre [nat -> map{|e } -> prop,nat -> map{|e } -> map{|e
                     } -> unit -> prop||] f i m)
                    /\
                    (forall (n:map{|e }).
                     (post [nat -> map{|e } -> prop,nat -> map{|e } -> map{|e
                      } -> unit -> prop||] f i m n ())
                     -> (inv (i - 1) n))))))}
                param(unit,{|e })
                {(λ(old:map{|e }) ->
                 (λ(cur:map{|e }) ->
                 (λ(:unit) -> inv (min start (end_ - 1)) cur)))}))))
in
let fact = logic nat -> nat in
let fact_zero = axiom (fact 0) = [nat||] 1 in
let
fact_step =
           axiom forall (n:nat).
                 (0 <= n) -> ((fact (n + 1)) = [nat||] (n * (fact n)))
in
let
rec(nat ->{|} nat) f =
                      (λ(x:nat) -> {(λ(cur:map{|}) -> 0 <= x)}
                      if x == [nat||] 0 then 1 else x * (f (x - 1))
                      {(λ(old:map{|}) ->
                       (λ(cur:map{|}) ->
                       (λ(r:nat) -> r = [nat||] (fact x))))})
